body
form(action="/admin/kitapeklemesayfasi" method="POST")
        .form-group.row
            label(for="kitapisim").col-sm-2.col-from-label Kitap Adı
            .col-sm-10
                input.form-control#name(tpye="text" name="kitapisim")

        .form-group.row
            label(for="kitapresim").col-sm-2.col-from-label Kitap Resim
            .col-sm-10
                input.form-control#price(tpye="text" name="kitapresim")

        .form-group.row
            label(for="kitapaciklama").col-sm-2.col-from-label Kitap Açıklama
            .col-sm-10
                input.form-control#imageUrl(tpye="text" name="kitapaciklama")

        .form-group.row
            label(for="kitapyazar").col-sm-2.col-from-label Kitap Yazar
            .col-sm-10
                input.form-control#imageUrl(tpye="text" name="kitapyazar")

        .form-group.row
            .col-sm-10.offset-sm-2
                input(type="submit" value="Save Product").btn.btn-primary

