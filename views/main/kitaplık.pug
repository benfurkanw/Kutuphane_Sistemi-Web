body
.menu-bar
  ul
    li
      a(href='/') Anasayfa
    li
      a(href='/userhome') Kullanıcı Paneli

.card-container
  each book in books
      .card
        .card-header
          h2 #{book.kitapisim}
        img.card-image(src= `../img/${book.Kitapresim}`)
        .card-footer
          a.button-left(href=`/kitapdetay/${book.kitapisim}`) Detay